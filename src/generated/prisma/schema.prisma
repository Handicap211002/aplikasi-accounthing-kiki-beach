generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Category {
  id        Int        @id @default(autoincrement())
  name      String
  slug      String     @unique
  menuItems MenuItem[]
}

model MenuItem {
  id          Int      @id @default(autoincrement())
  name        String
  price       Int
  image       String
  description String?
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}
